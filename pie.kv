#:import lexer lexer
#:import textinput kivy.uix.textinput
#:import os os
#:import datetime datetime

#:set LABEL_FONT_SIZE 20
#:set TITLE_FONT_SIZE 24
#:set CODE_FONT_SIZE 26

<Editor>:
  app: app
  id: editor
  header: header
  source_code: source_code
  footer: footer
  result: result
  BoxLayout:
    orientation: "vertical"
    size: root.size
    Header:
      id: header
      editor: editor
    BoxLayout:
      SourceCode:
        id: source_code
        editor: editor
    Splitter:
      sizable_from: "top"
      # https://kivy.org/doc/stable/api-kivy.uix.splitter.html#kivy.uix.splitter.Splitter.keep_within_parent
      keep_within_parent: True
      BoxLayout:
        orientation: "vertical"
        ResultLabel:
          id: result_label
        Result:
          id: result
          editor: editor
        Footer:
          id: footer

<Header@ActionBar>:
  ActionView:
    orientation: "horizontal"
    ActionPrevious:
      title: ""
      with_previous: False
      # kivy の icon を非表示にする
      size_hint: None, None
      size: 0, 0
    ActionGroup:
      text: "File"
      mode: "spinner"
      ActionButton:
        text: "Open"
        on_release: root.editor.show_files()
      ActionButton:
        text: "Save"
        on_release: root.editor.handle_file_save()
    ActionGroup:
      text: ""
      ActionButton:
        text: "Run"
        icon: "atlas://data/images/defaulttheme/media-playback-start"
        on_release: root.editor.coderunner.run_source_code()
      ActionButton:
        text: "Stop"
        icon: "atlas://data/images/defaulttheme/media-playback-stop"
        on_release: root.editor.coderunner.stop_running()
      ActionButton:
        text: "Beautify"
        on_release: root.editor.beautify_source_code()
      ActionButton:
        text: "bar"
        on_release: root.editor.bar()

<SourceCode@CodeInput>:
  text: "def f() { g(); } f();"
  cursor_width: 3
  cursor_color: (0.25, 0.25, 0.25, 1)
  cursor_blink: False
  # https://kivy.org/doc/stable/api-kivy.uix.textinput.html#kivy.uix.textinput.TextInput.use_bubble
  use_bubble: True
  # for syntax highlighting
  lexer: lexer.AsirLexer()
  background_normal: textinput.TextInput.background_active.defaultvalue
  on_touch_up: root.editor.footer.update_line_col_from_cursor(root.cursor_row + 1, root.cursor_col + 1)


# Label 単体だと高さを固定できない?ため
<ResultLabel@BoxLayout>:
  size_hint_y: None
  height: LABEL_FONT_SIZE * 2
  CustomLabel:
    text: "Output"
    background_color: (0.3, 0.3, 0.3, 1)
    color: (1, 1, 1, 1)
    halign: "left"
    valign: "middle"

<Result@BoxLayout>:
  text: ""
  CustomLabel:
    id: result
    text: root.text
    font_name: "M+ M Type-1 Regular"
    font_size: CODE_FONT_SIZE
    background_color: (0.1, 0.1, 0.1, 1)
    color: (1, 1, 1, 1)
    halign: "left"
    valign: "top"
    markup: True

<Footer>:
  orientation: "vertical"
  size_hint_y: None
  height: LABEL_FONT_SIZE * 3
  error_line: error_line
  filename: filename
  line_col: line_col
  CustomLabel:
    id: error_line
    text: ""
    background_color: (0.7, 0.7, 0.7, 1)
    color: (1, 0, 0, 1)
    halign: "left"
    valign: "middle"
  BoxLayout:
    orientation: "horizontal"
    CustomLabel:
      id: filename
      text: ""
      background_color: (0.9, 0.9, 0.9, 1)
      color: (0, 0, 0, 1)
      halign: "left"
      valign: "middle"
    CustomLabel:
      id: line_col
      text: "Line:1 Col:1"
      background_color: (0.9, 0.9, 0.9, 1)
      color: (0, 0, 0, 1)
      halign: "right"
      valign: "middle"

<CustomLabel@Label>:
  # https://kivy.org/doc/stable/api-kivy.uix.label.html#text-alignment-and-wrapping
  # text_size, halign, valign を指定する
  text_size: self.size
  # 背景色の設定
  background_color: (0.5, 0.5, 0.5, 1)
  canvas.before:
    Color:
      rgba: root.background_color
    Rectangle:
      pos: root.pos
      size: root.size

<FileOpenDialog>:
  orientation: "vertical"
  FileChooserListView:
    id: filechooser
    title: "Open File"
    rootpath: os.getcwd()
    on_submit: root.editor.filemanager.load_file(filechooser.selection)
    # filters: ""
  BoxLayout:
    size_hint_y: None
    height: LABEL_FONT_SIZE * 2
    orientation: "horizontal"
    Button:
      text: "Cancel"
      on_release: root.editor.dismiss_popup()
    Button:
      text: "Open"
      on_release: root.editor.filemanager.load_file(filechooser.selection)

<FileSaveDialog>:
  orientation: "vertical"
  error_hint: error_hint
  save_button: save_button
  TextInput:
    id: filename
    text: "script_{}.rr".format(datetime.datetime.now().strftime("%Y%m%d_%H%M%S"))
    size_hint_y: None
    height: CODE_FONT_SIZE * 2
    multiline: False
    on_text_validate: root.editor.filemanager.write_to_file(filename.text)
    cursor_width: 3
    cursor_color: (0.25, 0.25, 0.25, 1)
    cursor_blink: False
  BoxLayout
    size_hint_y: None
    height: LABEL_FONT_SIZE * 2
    orientation: "horizontal"
    Button:
      text: "Cancel"
      on_release: root.editor.dismiss_popup()
    Button:
      id: save_button
      text: "Save"
      on_release: root.editor.filemanager.write_to_file(filename.text)
  Label:
    id: error_hint
    text: ""
    markup: True
    halign: "left"
    valign: "middle"
    text_size: self.size

<ImageViewer>:
  orientation: "vertical"
  Image:
    source: root.source
  Button:
    text: "Close"
    size_hint_y: None
    height: LABEL_FONT_SIZE * 2
    on_release: root.editor.dismiss_popup()

# 上書きしている
<Label>:
  font_name: "M+ P Type-1 Regular"
  font_size: LABEL_FONT_SIZE
  padding_x: 5
<Popup>:
  title_font: "M+ P Type-1 Regular"
  title_size: TITLE_FONT_SIZE
<TextInput>:
  font_name: "M+ M Type-1 Regular"
  font_size: CODE_FONT_SIZE
<Button>:
  always_release: True
