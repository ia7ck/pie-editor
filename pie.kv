#:import lexer lexer
#:import textinput kivy.uix.textinput
#:import os os
#:import datetime datetime

#:set LABEL_FONT_SIZE 20
#:set TITLE_FONT_SIZE 24
#:set CODE_FONT_SIZE 26

<Editor>:
  app: app
  id: editor
  header: header
  source_code: source_code
  footer: footer
  result: result
  filepath: ""
  BoxLayout:
    orientation: "vertical"
    size: root.size
    Header:
      id: header
      editor: editor
    BoxLayout:
      SourceCode:
        id: source_code
        editor: editor
    Splitter:
      sizable_from: "top"
      keep_within_parent: True
      BoxLayout:
        orientation: "vertical"
        Result:
          id: result
        Footer:
          id: footer

<Header>:
  ActionView:
    orientation: "horizontal"
    size_hint_y: None
    height: LABEL_FONT_SIZE * 2
    ActionPrevious:
      title: ""
      with_previous: False
      size_hint: None, None
      size: 0, 0  # icon を非表示にする
    ActionGroup:
      text: "File"
      mode: "spinner"
      ActionButton:
        text: "Open"
        on_release: root.editor.show_files()
      ActionButton:
        text: "Save"
        on_release: root.editor.handle_file_save()
    ActionGroup:
      text: ""
      ActionButton:
        text: "Run"
        icon: "atlas://data/images/defaulttheme/media-playback-start"
        on_release: root.editor.run_source_code()
      ActionButton:
        text: "Stop"
        icon: "atlas://data/images/defaulttheme/media-playback-stop"
        on_release: root.editor.stop_running()
      ActionButton:
        text: "Beautify"
        on_release: root.editor.beautify_source_code()

<SourceCode>:
  text: "def f() { g(); } f();"
  cursor_width: 3
  cursor_color: (0.25, 0.25, 0.25, 1)
  cursor_blink: False
  lexer: lexer.AsirLexer()  # for syntax highlighting
  background_normal: textinput.TextInput.background_active.defaultvalue  # light background color
  auto_indent: True  #  効かない??
  on_touch_up: root.editor.footer.update_line_col_from_cursor(root.cursor_row + 1, root.cursor_col + 1)

<Result>:
  orientation: "vertical"
  output: output
  BoxLayout:
    id: label
    orientation: "vertical"
    size_hint_y: None
    height: LABEL_FONT_SIZE * 2
    LabelWithBackgroundColor:
      text: "Output (read only)"
      background_color: (0.3, 0.3, 0.3, 1)
      color: (1, 1, 1, 1)
      text_size: self.size
      halign: "left"
      valign: "middle"
      padding_x: 5
  TextInput:
    id: output
    text: ""
    readonly: True
    cursor_width: 0
    background_color: (0.1, 0.1, 0.1, 1)
    foreground_color: (1, 1, 1, 1)

<Footer>:
  orientation: "vertical"
  size_hint_y: None
  height: LABEL_FONT_SIZE * 3
  error_line: error_line
  filename: filename
  line_col: line_col
  LabelWithBackgroundColor:
    id: error_line
    text: ""
    background_color: (0.7, 0.7, 0.7, 1)
    color: (1, 0, 0, 1)
    text_size: self.size
    halign: "left"
    valign: "middle"
    padding_x: 5
  BoxLayout:
    orientation: "horizontal"
    LabelWithBackgroundColor:
      id: filename
      text: ""
      background_color: (0.9, 0.9, 0.9, 1)
      color: (0, 0, 0, 1)
      text_size: self.size
      halign: "left"
      valign: "middle"
      padding_x: 5
    LabelWithBackgroundColor:
      id: line_col
      text: "Line:1 Col:1"
      background_color: (0.9, 0.9, 0.9, 1)
      color: (0, 0, 0, 1)
      text_size: self.size
      halign: "right"
      valign: "middle"
      padding_x: 5

<LabelWithBackgroundColor>:
  canvas.before:
    Color:
      rgba: root.background_color
    Rectangle:
      pos: root.pos
      size: root.size

<FileOpenDialog>:
  orientation: "vertical"
  FileChooserListView:
    id: filechooser
    title: "Open File"
    rootpath: os.getcwd()
    on_submit: root.editor.load_file(filechooser.selection)
    # filters: ""
  BoxLayout:
    size_hint_y: None
    height: LABEL_FONT_SIZE * 2
    orientation: "horizontal"
    Button:
      text: "Cancel"
      on_release: root.editor.dismiss_popup()
    Button:
      text: "Open"
      on_release: root.editor.load_file(filechooser.selection)

<FileSaveDialog>:
  orientation: "vertical"
  error_hint: error_hint
  save_button: save_button
  TextInput:
    id: filename
    text: "script_{}.rr".format(datetime.datetime.now().strftime("%Y%m%d_%H%M%S"))
    size_hint_y: None
    height: CODE_FONT_SIZE * 2
    multiline: False
    on_text_validate: root.editor.write_source_code_to_file(filename.text)
    cursor_width: 3
    cursor_color: (0.25, 0.25, 0.25, 1)
    cursor_blink: False
  BoxLayout
    size_hint_y: None
    height: LABEL_FONT_SIZE * 2
    orientation: "horizontal"
    Button:
      text: "Cancel"
      on_release: root.editor.dismiss_popup()
    Button:
      id: save_button
      text: "Save"
      on_release: root.editor.write_source_code_to_file(filename.text)
  Label:
    id: error_hint
    text: ""
    markup: True
    halign: "left"
    valign: "middle"
    text_size: self.size

# 上書きしている
<Label>:
  font_name: "M+ P Type-1 Regular"
  font_size: LABEL_FONT_SIZE
<Popup>:
  title_font: "M+ P Type-1 Regular"
  title_size: TITLE_FONT_SIZE
<TextInput>:
  font_name: "M+ M Type-1 Regular"
  font_size: CODE_FONT_SIZE
<Button>:
  always_release: True
