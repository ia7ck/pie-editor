#:import asirlexer asirlexer
#:import textinput kivy.uix.textinput
#:import os os
#:import datetime datetime

#:set LABEL_FONT_SIZE 20
#:set TITLE_FONT_SIZE 24
#:set CODE_FONT_SIZE 26

<Editor>:
  app: app
  id: editor
  header: header
  source_code: source_code
  footer: footer
  result: result
  BoxLayout:
    orientation: "vertical"
    size: root.size
    Header:
      id: header
      editor: editor
    BoxLayout:
      SourceCode:
        id: source_code
        editor: editor
    Splitter:
      sizable_from: "top"
      # https://kivy.org/doc/stable/api-kivy.uix.splitter.html#kivy.uix.splitter.Splitter.keep_within_parent
      keep_within_parent: True
      BoxLayout:
        orientation: "vertical"
        ResultHeader:
          id: result_header
          editor: editor
        Result:
          id: result
          editor: editor
        Footer:
          id: footer

<Header>:
  ActionView:
    orientation: "horizontal"
    ActionPrevious:
      title: ""
      with_previous: False
      # kivy の icon を非表示にする
      size_hint: None, None
      size: 0, 0
    ActionGroup:
      text: "File"
      mode: "spinner"
      ActionButton:
        text: "Open"
        on_release: root.editor.show_files()
      ActionButton:
        text: "Save"
        on_release: root.editor.handle_file_save()
    ActionGroup:
      text: ""
      ActionButton:
        text: "Run"
        icon: "atlas://data/images/defaulttheme/media-playback-start"
        on_release: root.editor.coderunner.run_source_code()
      ActionButton:
        text: "Stop"
        icon: "atlas://data/images/defaulttheme/media-playback-stop"
        on_release: root.editor.coderunner.stop_running()
      ActionButton:
        text: "Beautify"
        on_release: root.editor.beautify_source_code()
      ActionButton:
        text: "to HTML"
        on_release: root.editor.generate_html()
    ActionGroup:
      text: "Links"
      mode: "spinner"
      dropdown_width: 250
      ActionButton:
        text: "Asir Manual"
        on_release: root.editor.open_link("http://www.math.kobe-u.ac.jp/OpenXM/Current/doc/asir2000/html-ja/man/man.html")
      ActionButton:
        text: "Asir-Contrib Manual"
        on_release: root.editor.open_link("http://www.math.kobe-u.ac.jp/OpenXM/Current/doc/asir-contrib/ja/cman-html/cman-ja.html")

<ActionItem>:
  font_name: "M+ P Type-1 Regular"
  font_size: LABEL_FONT_SIZE

<SourceCode>:
  text: "def f() { Ax = (x + 1) ^ 2;/* コメント */ g(); } f();"
  cursor_width: 3
  cursor_color: (0.25, 0.25, 0.25, 1)
  cursor_blink: False
  replace_crlf: True
  auto_indent: True
  # https://kivy.org/doc/stable/api-kivy.uix.textinput.html#kivy.uix.textinput.TextInput.use_bubble
  use_bubble: True
  # for syntax highlighting
  lexer: asirlexer.AsirLexer()
  background_normal: textinput.TextInput.background_active.defaultvalue
  on_touch_up: root.editor.footer.update_line_col_from_cursor(root.cursor_row + 1, root.cursor_col + 1)


# Label 単体だと高さを固定できない?ため
<ResultHeader>:
  orientation: "horizontal"
  size_hint_y: None
  height: LABEL_FONT_SIZE * 2
  CustomLabel:
    text: "Output"
    background_color: (0.3, 0.3, 0.3, 1)
    color: (1, 1, 1, 1)
    halign: "left"
    valign: "middle"
  Button:
    size_hint_x: 0.2
    text: "Copy"
    on_release: root.editor.copy_to_clipboard()


<Result>:
  text: ""
  CustomLabel:
    id: result
    text: root.text
    font_name: "M+ M Type-1 Regular"
    font_size: CODE_FONT_SIZE
    background_color: (0.1, 0.1, 0.1, 1)
    color: (1, 1, 1, 1)
    halign: "left"
    valign: "top"
    markup: True

<Footer>:
  orientation: "vertical"
  size_hint_y: None
  height: LABEL_FONT_SIZE * 3
  error_message: error_message
  filename: filename
  line_col: line_col
  CustomLabel:
    id: error_message
    text: ""
    background_color: (0.7, 0.7, 0.7, 1)
    color: (1, 0, 0, 1)
    halign: "left"
    valign: "middle"
  BoxLayout:
    orientation: "horizontal"
    CustomLabel:
      id: filename
      text: ""
      background_color: (0.9, 0.9, 0.9, 1)
      color: (0, 0, 0, 1)
      halign: "left"
      valign: "middle"
    CustomLabel:
      id: line_col
      text: "Line:1 Col:1"
      background_color: (0.9, 0.9, 0.9, 1)
      color: (0, 0, 0, 1)
      halign: "right"
      valign: "middle"

<CustomLabel@Label>:
  font_name: "M+ P Type-1 Regular"
  font_size: LABEL_FONT_SIZE
  padding_x: 5
  # https://kivy.org/doc/stable/api-kivy.uix.label.html#text-alignment-and-wrapping
  # text_size, halign, valign を指定する
  text_size: self.size
  # 背景色の設定
  background_color: (0.5, 0.5, 0.5, 1)
  canvas.before:
    Color:
      rgba: root.background_color
    Rectangle:
      pos: root.pos
      size: root.size

<FileOpenDialog>:
  orientation: "vertical"
  FileChooserIconView:
    id: filechooser
    title: "Open File"
    rootpath: os.environ["HOME"]
    on_submit: root.editor.filemanager.load_file(filechooser.selection)
    # filters: ""
  BoxLayout:
    size_hint_y: None
    height: btn.font_size * 2
    orientation: "horizontal"
    Button:
      id: btn
      text: "Cancel"
      on_release: root.editor.dismiss_popup()
    Button:
      text: "Open"
      on_release: root.editor.filemanager.load_file(filechooser.selection)

<FileSaveDialog>:
  orientation: "vertical"
  filechooser: filechooser
  filepath: filepath
  save_button: save_button
  FileChooserIconView:
    id: filechooser
    title: "Save File"
    rootpath: os.environ["HOME"]
    # https://kivy.org/doc/stable/api-kivy.uix.filechooser.html#usage-example
    on_selection: root.filepath.text = self.selection and self.selection[0] or ""
  TextInput:
    id: filepath
    text: "script_{}.rr".format(datetime.datetime.now().strftime("%Y%m%d_%H%M%S"))
    font_size: 20
    size_hint_y: None
    height: self.font_size * 2
    multiline: False
    on_text_validate: root.editor.filemanager.write_to_file(filechooser.path, self.text)
    cursor_width: 3
    cursor_color: (0.25, 0.25, 0.25, 1)
    cursor_blink: False
  BoxLayout
    size_hint_y: None
    height: btn.font_size * 2
    orientation: "horizontal"
    Button:
      id: btn
      text: "Cancel"
      on_release: root.editor.dismiss_popup()
    Button:
      id: save_button
      text: "Save"
      on_release: root.editor.filemanager.write_to_file(filechooser.path, filepath.text)

<ImageViewer>:
  orientation: "vertical"
  canvas.before:
    Color:
      rgb: (1, 1, 1)
    Rectangle:
      size: self.size
      pos: self.pos
  Image:
    source: root.source
  Button:
    text: "Close"
    size_hint_y: None
    height: self.font_size * 2
    on_release: root.editor.dismiss_popup()

<Label>:
  font_name: "M+ P Type-1 Regular"
<Popup>:
  title_font: "M+ P Type-1 Regular"
  title_size: TITLE_FONT_SIZE
<TextInput>:
  font_name: "M+ M Type-1 Regular"
  font_size: CODE_FONT_SIZE
<Button>:
  always_release: True
